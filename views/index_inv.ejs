<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Gestión de Productos</title>
    <!-- Enlace al CDN de Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Enlace al archivo de estilos -->
    <link rel="stylesheet" href="/styles.css">
    <style>
        /* Estilo del banner */
        .banner {
            background-color: #FFA451; /* Color principal */
            color: white;
            padding: 1rem;
            text-align: center;
            font-size: 1.5rem;
            display: flex;
            justify-content: center;
            align-items: center;
            gap: 10px;
        }

        .banner img {
            width: 30px;
            height: 30px;
        }

        /* Estilo del formulario y la tabla */
        .container {
            max-width: 800px;
            margin: 20px auto;
            padding: 20px;
            background: white;
            border-radius: 8px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        }

        form {
            display: flex;
            flex-direction: column;
            gap: 10px;
        }

        form input, form button {
            padding: 10px;
            border: 1px solid #ddd;
            border-radius: 4px;
            font-size: 1rem;
        }

        /* Botón de guardar */
        form button {
            background-color: #FFA451; /* Color principal */
            color: white;
            border: none;
            cursor: pointer;
        }

        form button:hover {
            background-color: #e8943f; /* Color más oscuro al hacer hover */
        }

        /* Estilo de la tabla */
        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }

        table, th, td {
            border: 1px solid #ddd;
        }

        th, td {
            padding: 10px;
            text-align: center;
        }

        th {
            background-color: #FFA451;
            color: white;
        }
    </style>
</head>
<body class="bg-light">

    <!-- Banner con icono y texto -->
    <header class="text-center">
        <h1>Gestión de Vehículos</h1>
        <!-- Botón para regresar al menú principal con icono -->
        <a href="/menu.html" class="btn btn-regresar">
          <img src="/maiz_incon_1.png" alt="Ícono de Menú" /> Regresar
        </a>
      </header>

    <!-- Formulario para agregar un nuevo producto -->
    <!-- Formulario para agregar un nuevo producto -->
<div class="container">
    <h2 class="text-center mb-4">Agregar Nuevo Producto</h2>
    <form action="/add-product" method="POST">
        <div class="mb-3">
            <label for="ID" class="form-label">ID del Producto</label>
            <input type="number" name="ID" class="form-control" placeholder="ID del producto" required>
        </div>
        <div class="mb-3">
            <label for="Nombre_producto" class="form-label">Nombre del Producto</label>
            <input type="text" name="Nombre_producto" class="form-control" placeholder="Nombre del producto" required>
        </div>
        <div class="mb-3">
            <label for="Precio" class="form-label">Precio</label>
            <input type="number" name="Precio" class="form-control" placeholder="Precio del producto" required>
        </div>
        <button type="submit" class="btn-rojo">Guardar</button>
    </form>
</div>


    <!-- Tabla para mostrar los productos ingresados -->
   
    <div class="container mt-4">
        <h2 class="text-center mb-4">Lista de Productos</h2>
        <table>
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Nombre del Producto</th>
                    <th>Precio</th>
                </tr>
            </thead>
            <tbody>
                <!-- Aquí se mostrarán los productos desde la base de datos -->
                <% products.forEach(function(product) { %>
                    <tr>
                        <td><%= product.ID %></td>
                        <td><%= product.Nombre_producto %></td>
                        <td><%= product.Precio %></td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
    </div>
    <!-- Enlace a los scripts de Bootstrap -->
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.min.js"></script>
</body>
</html>
